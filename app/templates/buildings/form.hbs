<div class="form-group">
  <label>Name</label>
  {{input type="text" class="form-control"  value=name placeholder="Enter a name..."}}
</div>
<div class="form-group">
  <label>Description (optional)</label>
  {{input type="text" class="form-control"  value=description}}
</div>
<div class="form-group">
  <label>Space type</label>
  {{view Ember.Select class="form-control" content=spaceTypes
                                           optionValuePath="content.name"
                                           optionLabelPath="content.name"
                                           value=spaceType}}
</div>
<div class="form-group">
  <label>Address</label>
  {{input type="text" class="form-control"  value=address}}
</div>
<div class="form-group">
  <label>City</label>
  {{input type="text" class="form-control"  value=city}}
</div>
<div class="form-group">
  <label>State</label>
  {{view Ember.Select class="form-control" content=states
                                           optionValuePath="content.id"
                                           optionLabelPath="content.name"
                                           value=state}}
</div>
<div class="form-group">
  <label>Zipcode</label>
  {{input type="text" class="form-control"  value=zipcode}}
</div>
<div class="form-group">
  <label>Area (sq.ft.)</label>
  {{input type="text" class="form-control"  value=area}}
</div>
